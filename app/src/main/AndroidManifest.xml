<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.guanyin.sardar.pha">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name_shorter"
        android:supportsRtl="true"
        android:theme="@style/NoActionBarTheme">
        <activity android:name=".FunctionActivity">
        </activity>
        <activity android:name=".EntranceActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".alert.ClockEditActivity">
        </activity>
        <activity android:name=".test_other_function.SensorActivity">
        </activity>

        <receiver android:name=".alert.receiver.AlarmReceiver">
            <intent-filter>
                <action android:name="alarm_receiver_action"/>
            </intent-filter>
        </receiver>

        <service android:name=".alert.service.MusicService"/>

        <activity android:name=".alert.receiver.AlarmReceiveActivity">
        </activity>
    </application>

</manifest>